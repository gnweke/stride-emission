{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["mocha", "chai", "node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["scripts/**/*", "tests/**/*", "target/idl/**/*.json"],
  "exclude": ["node_modules"]
}
